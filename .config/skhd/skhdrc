# change window focus within space
# change window focus with wrap-around
alt - h : $HOME/.config/skhd/focus_wrap.sh west
alt - l : $HOME/.config/skhd/focus_wrap.sh east
alt - k : $HOME/.config/skhd/focus_wrap.sh north
alt - j : $HOME/.config/skhd/focus_wrap.sh south

# toggle window float
alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt - e : yabai -m space --balance

# swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# move window to display left, right, up and down
shift + alt - h : ~/.config/skhd/move_window_focus.sh west
shift + alt - l : ~/.config/skhd/move_window_focus.sh east
shift + alt - k : ~/.config/skhd/move_window_focus.sh north
shift + alt - j : ~/.config/skhd/move_window_focus.sh south

# shift + alt - h : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - l : yabai -m window --display east; yabai -m display --focus east;
# shift + alt - k : yabai -m window --display north; yabai -m display --focus north;
# shift + alt - j : yabai -m window --display south; yabai -m display --focus south;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
